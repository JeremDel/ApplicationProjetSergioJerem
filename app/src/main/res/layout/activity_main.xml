<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#B0C4DE"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <include layout="@layout/toolbar"/>

    <Button
        android:id="@+id/buttonExpedition"
        android:layout_width="398dp"
        android:layout_height="71dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="248dp"
        android:backgroundTint="@color/grau"
        android:insetLeft="45dp"
        android:insetRight="35dp"
        android:onClick="pageExcursion"
        android:text="Découvrez nos excursions"
        android:textSize="13sp"
        android:visibility="visible">

    </Button>

    <TextView
        android:id="@+id/textView"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="154dp"
        android:gravity="center"
        android:text="@string/presentation"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="17dp"
        android:gravity="center"
        android:paddingTop="100dp"
        android:text="L'aventure s'offre à vous !"
        android:textColor="@color/white"
        android:textSize="25sp">

    </TextView>

</RelativeLayout>