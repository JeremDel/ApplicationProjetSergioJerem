<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/muveran"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B0C4DE"
    tools:context=".exo.ui.excursion.ExpeditionActivity">
    <include layout="@layout/toolbar"/>



    <TextView
        android:id="@+id/quisommes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="120dp"
        android:text="Who are we ?"
        android:textColor="#F2FFFFFF"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/texteaboutus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quisommes"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="181dp"
        android:text="@string/aboutus"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/imageaboutus"
        android:layout_width="251dp"
        android:layout_height="153dp"
        android:layout_below="@id/texteaboutus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-160dp"
        app:srcCompat="@drawable/aboutus" />


</RelativeLayout>