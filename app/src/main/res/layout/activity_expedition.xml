<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/muveran"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B0C4DE"
    tools:context=".ExpeditionActivity">
    <include layout="@layout/toolbar"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="173dp"
            android:layout_height="161dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="98dp"
            app:srcCompat="@drawable/muverans" />

        <TextView
            android:id="@+id/titreMuveran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="99dp"
            android:layout_marginEnd="25dp"
            android:text="Tour des Muverans"
            android:textColor="#F2FFFFFF"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editTextTextMultiLine"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="126dp"
            android:layout_marginEnd="14dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:text="@string/muverans"
            android:textColor="@color/white" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="180dp"
        android:layout_height="186dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="277dp"
        app:srcCompat="@drawable/walser" />

    <TextView
        android:id="@+id/titreWalser"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="273dp"
        android:layout_marginEnd="54dp"
        android:text="Tour Walser"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/texteWalser"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="300dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="@string/wall"
        android:textColor="@color/white">

    </EditText>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="171dp"
        android:layout_height="172dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="120dp"
        app:srcCompat="@drawable/lacs" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="262dp"
        android:text="Les 7 lacs"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editTextTextMultiLine3"
        android:layout_width="200dp"
        android:layout_height="144dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="121dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="@string/lacs"
        android:textColor="@color/white" />


</RelativeLayout>